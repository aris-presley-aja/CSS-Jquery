<script>
$(function() { 
  $('#tgl1').datetimepicker({format : "DD/MM/YYYY"});
  $('#tgl2').datetimepicker({format : "DD/MMM/YYYY"});
  $('#tgl3').datetimepicker({format : "DD/MMMM/YYYY"});
 
  $('#tgl4').datetimepicker({
   locale:'id',
   format:'DD/MMM/YYYY'
   });
  $('#tgl5').datetimepicker({
   locale:'id',
   format:'DD/MMMM/YYYY'
   });
   $('#tgl6').datetimepicker({
   locale:'id',
   format:'DD-MMMM-YYYY'
   });
});

</script>	
